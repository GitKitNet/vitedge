{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2019",
    "strict": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "noEmitOnError": true,
    "sourceMap": false,
    "allowJs": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "functions/**/*"
  ]
}